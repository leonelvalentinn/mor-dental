<style>
  .card-4 {
    position: relative;
    width: -webkit-fill-available;
    height: 320px;
    background: #51dfff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 5px;
  }

  .card-4::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(315deg,#03a9f4,var(--secondary-300));
    border-radius: 5px;
  }

  .card-4::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(315deg,#03a9f4,var(--secondary-300));
    filter: blur(30px);
    border-radius: 5px;
  }

  .card-4 b {
    position: absolute;
    inset: 6px;
    background: rgba(0, 0, 0, 0.6);
    z-index: 2;
  }

  .card-4 img {
    position: absolute;
    z-index: 3;
    scale: 0.8;
    opacity: 0.25;
    transition: 0.5s;
  }

  .card-4:hover img {
    scale: 0.5;
    opacity: 0.9;
    transform: translateY(-70px);
  }

  .card-4 .content-4 {
    position: absolute;
    z-index: 3;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    transform: scale(0);
    transition: 0.5s;
    backdrop-filter: blur(10px);
    padding: 20px;
    border-radius: 10px;
  }

  .card-4:hover .content-4 {
    transform: scale(1);
    bottom: 25px;
  }

  .content-4 .title-4 {
    position: relative;
    color: rgb(0, 0, 0);
    font-weight: 500;
    line-height: 1em;
    font-size: 1em;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-align: center;
  }

  .content-4 .title-4 span {
    font-weight: 300;
    font-size: 0.70em;
  }

  .content-4 .sci-4 {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 5px;
  }

  .sci-4 li {
    list-style: none;
  }

  .sci-4 li .fa-brands {
    width: 14px;
  }

  .sci-4 li .fa-facebook {
    width: 10px;
  }

  .sci-4 li a {
    position: relative;
    text-decoration: none;
    color: rgba(255, 255, 255, 0.5);
    background: rgba(0, 0, 0, 0.2);
    fill: currentColor;
    width: 30px;
    height: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 4px;
    transition: 0.5s;
  }

  .sci-4 li a:hover {
    fill: currentColor;
    color: rgba(255, 255, 255, 1);
  }

</style>